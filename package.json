{
  "name": "ezpage",
  "version": "1.0.0",
  "description": "Compiler to build static pages",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p .",
    "check-types": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore  \"**/*.+(js|json|ts)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier --list-different",
    "validate": "npm run check-types && npm run check-format && npm run lint && npm run build"
  },
  "author": "Adrián Marcelo Suárez Ponce",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "tsc": "^2.0.3",
    "typescript": "^4.4.3"
  }
}
